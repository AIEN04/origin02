<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col"><i class="fas fa-trash-alt"></i></th>
      <th scope="col">#</th>  
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Id</th>
    </tr>
  </thead>
  <tbody>
      {{#each sales}}
    <tr>
      <td><a href="/sales/remove/{{sid}}"><i class="fas fa-trash-alt"></i></a></td>
      <th scope="row">{{@index}}</th>  
      <td>{{this.id}}</td>
      <td class="{{../myclass}}">{{this.name}}</td>
      <td class="{{table-danger}}">{{this.age}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>